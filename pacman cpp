#include "pacman.h"
pacman::pacman(int initialRow, int initialColumn, string imageName)
{
	row = initialRow;
	column = initialColumn;
	rect.setSize(Vector2f(50, 50));
	rect.setPosition(60 + 50 * initialColumn, 60 + 50 * initialRow);
	texture.loadFromFile(imageName);
	rect.setTexture(&texture);
}
void pacman::move(char direction, int arr[rows][cols])
{
	if (direction == 'U' || direction == 'u')
	{
		if (arr[row - 1][column] != -1)
		{
			row--;
			rect.move(0, -50);
		}
	}
	else if (direction == 'D' || direction == 'd')
	{
		if (arr[row + 1][column] != -1)
		{
			row++;
			rect.move(0, 50);
		}
	}
	else if (direction == 'R' || direction == 'r')
	{
		if (arr[row][column + 1] != -1)
		{
			column++;
			rect.move(50, 0);
		}
	}
	else if (direction == 'L' || direction == 'l')
	{
		if (arr[row][column - 1] != -1)
		{
			column--;
			rect.move(-50, 0);
		}
	}
}
