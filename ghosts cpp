#include "ghosts.h"
void ghosts::blinky(float initialRow, float initialColumn, string imageName)
{
	row = initialRow;
	column = initialColumn;
	blink.setSize(Vector2f(50, 50));
	blink.setPosition(60 + 50 * initialColumn, 60 + 50 * initialRow); //Line still to be edited
	texture.loadFromFile(imageName);
	blink.setTexture(&texture);
}
